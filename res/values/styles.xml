<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!--Wrap width & height-->
    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Match width & height-->
    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--Match width, wrap height-->
    <style name="MatchWidth" parent="Wrap">
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--Base button style-->
    <style name="BaseButton" parent="Wrap">
    </style>

    <!--Number-->
    <style name="Number" parent="Wrap">
    </style>

    <!--Zero-->
    <style name="ZeroKey" parent="Number">
    </style>

    <!--Operator-->
    <style name="Operator" parent="BaseButton">
    </style>

    <!--Equal button-->
    <style name="Equal" parent="BaseButton">
    </style>

    <!--Clear button-->
    <style name="Clear" parent="BaseButton">
    </style>

    <!--Result Display-->
    <style name="Result" parent="Wrap">
    </style>
</resources>
